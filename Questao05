<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script>
  $(function(){
	$("#inputSubmit").click(function(){
      var senha = $("#inputSenha").val();
      var senha2 = $("#inputSenha2").val();
      if(senha != senha2){
        event.preventDefault();
      	alert("Senha Inválida!");
      }
    });
  });
</script>
